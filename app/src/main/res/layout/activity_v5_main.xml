<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".v5.V5MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/my_toolbar"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorRed"
            android:drawableStart="@drawable/ic_book_ablack_small"
            android:background="@drawable/selector_awhite_button"
            android:focusable="true"
            android:drawablePadding="4dp"
            android:clickable="true"
            android:padding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>

        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"/>

        <TextView
            android:id="@+id/scout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorAlmostBlack"
            android:drawableStart="@drawable/ic_account_box_ablack_small"
            android:background="@drawable/selector_awhite_button"
            android:textIsSelectable="false"
            android:drawablePadding="4dp"
            android:padding="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"/>
    </LinearLayout>

    <ListView
        android:id="@+id/entries_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>