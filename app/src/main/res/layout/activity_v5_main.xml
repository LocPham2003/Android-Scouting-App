<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".v5.V5MainActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:id="@+id/my_toolbar"
        app:titleTextColor="@color/colorAccent"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDarkAlmostWhite"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:gravity="center">

        <TextView
            android:id="@+id/board"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:drawableStart="@drawable/ic_book_ablack_small"
            android:background="@drawable/selector_awhite_button"
            android:focusable="true"
            android:drawablePadding="4dp"
            android:clickable="true"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

        <View
            android:layout_width="12dp"
            android:layout_height="match_parent"/>

        <TextView
            android:id="@+id/scout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorAlmostBlack"
            android:drawableStart="@drawable/ic_account_box_ablack_small"
            android:background="@drawable/selector_awhite_button"
            android:drawablePadding="4dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:clickable="true"
            android:paddingBottom="12dp"
            android:focusable="true"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorDarkAlmostWhite"/>

    <ListView
        android:id="@+id/entries_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>